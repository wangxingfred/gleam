pub fn main() -> Int {
  let outer = fn(x) {
    let inner = fn(y) {
      case y > 0 {
        True -> $return y * 2  // Returns from inner function, not main
        False -> 0
      }
    }
    inner(x) + 1
  }
  outer(5)
}

